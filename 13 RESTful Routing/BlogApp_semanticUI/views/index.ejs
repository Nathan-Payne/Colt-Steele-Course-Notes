
<% include partials/header %>

<div class="ui main text container">
    <div class="ui huge header">RESTful Sagan App</div>
        <div class="ui very relaxed divided items">
            <% blogs.forEach(function(blog){ %>
                <div class="item blogpost">
                    <div class="image">
                        <img src="<%= blog.image %>" alt="">
                    </div>
                    <div class="content">
                        <a class="header" href="/blogs/<%= blog._id %>"><%= blog.title %></a>
                        <div class="meta">
                            <span> <%= blog.created.toDateString() %></span>
                        </div>
                        <div class="description">
                            <p><%- blog.body.substring(0, 100) %>...</p>
                        </div>
                        <div class="extra">
                            <a class="ui violet button" href="/blogs/<%= blog._id %>">
                                Read More <i class="right chevron icon"></i>                            
                            </a>
                        </div>
                    </div>
                </div>
            <% }) %>
            
        </div>
</div>
<% include partials/footer %>
